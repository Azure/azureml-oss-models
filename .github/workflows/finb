name: ft-classification

on:
  workflow_dispatch:
  schedule:
    - cron: "31 10/12 * * *"
  pull_request:
    branches:
      - main
    paths:
      - .github/workflows/finb.yaml

env:
  model_name: microsoft-deberta-xlarge
  model_version: 5
jobs:
  finetuning-text:
    runs-on: ubuntu-latest
    steps:
      - name: Clone Azure/azureml-examples PUBLIC repository
        uses: actions/checkout@v2
        with:
          owner: 'Azure'
          repository: 'Azure/azureml-examples'
          ref: 'hrishikesh/sysreg-workflow'
      - name: setup python
        uses: actions/setup-python@v2
        with:
          python-version: "3.8"